{
  "name": "react-until-interactive",
  "version": "1.0.0-alpha.1",
  "homepage": "https://github.com/jyunhanlin/react-until-interactive",
  "bugs": {
    "url": "https://github.com/jyunhanlin/react-until-interactive/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jyunhanlin/react-until-interactive.git"
  },
  "workspaces": [
    "example"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "npm run dev -w example",
    "build": "tsup src/index.ts --format esm,cjs --target es6 --dts --minify --treeshake",
    "test:dev": "jest --watch --config jest.config.cjs",
    "test": "jest --silent --runInBand --config jest.config.cjs",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "peerDependencies": {
    "react": ">=17.x",
    "react-dom": ">=17.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.3.4",
    "@swc/jest": "^0.2.23",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.1.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^19.0.5",
    "typescript": "^4.8.4",
    "tsup": "^6.2.3"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "eslint",
      "prettier --write"
    ]
  }
}
